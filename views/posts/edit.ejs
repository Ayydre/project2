      <div class="header">
       <a href="/toolow" class="logo">TooLowForComfort</a>
       </div>
      <nav>
        <%- include ('../partials/nav.ejs') %>
      </nav>
      <div class="container">
        <div class="text-area">
        <h2 class="add">Edit Post</h2>
