          <input type="text" name="description" value="<%=post.description;%>"/><br/>
          <input type="text" name="img" value="<%=post.img;%>"/><br/>
          <input type="text" name="img2" value="<%=post.img2;%>"/><br/>
          <input type="text" name="img3" value="<%=post.img3;%>"/><br/>
