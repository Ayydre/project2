<!DOCTYPE html>
<html>
    <!-- ===========HEAD============= -->
    <%- include ('../partials/head.ejs') %>
    <!-- ============================ -->
    <body>
      <!-- ==========NAV========== -->
        <%- include ('../partials/nav.ejs') %>
      <!-- ========================== -->
      <!-- ==========HEADER========== -->
        <%- include ('../partials/header.ejs') %>
      <!-- ========================== -->
      <div class="container">
        <div class="elements">
        <div class="shop">
          <div class="ft-label">
          <h1 class="feature-home">Shop</h1>
          <div class="line-home"></div>
          </div>
          <div class="merch">
            <ul class="home-ul">
              <li class="home-li"><a href="/toolow/show/shirt"><img src="https://i.imgur.com/TnKKXWT.jpg" alt="t-shirt" class="img-home"></a>
              <a href="/toolow/show/shirt" class="info-home"><h4 class="info-home">2L4C Limited Edition Tee</h4></a><h4 class="info-home-price">$25</h4></li>
              <li class="home-li"><a href="/toolow/show/sticker"><img src="https://i.imgur.com/X6DSe4r.jpg" class="img-home"></a>
              <a href="/toolow/show/sticker" class="info-home"><h4 class="info-home">2L4C Sticker</h4></a><h4 class="info-home-price">$8</h4></li>
            </ul>
          </div>
          <div class="soon">
          <h2 class="soon-text">More Merch Coming Soon!</h2>
          </div>
        </div>
        <!-- ==========SIDEBAR========== -->
          <%- include ('../partials/sidebar.ejs') %>
        <!-- ========================== -->
        </div>
        <div class="blog-section">
          <div class="ft-label">
          <a href="/toolow/forum" class="home-blog-title"><h1 class="feature-home-blog">Blog</h1></a>
          <div class="line-home"></div>
          </div>
          <a href="/toolow/forum" class="blog-link"><div class="blog-link">post your car to get featured ></div></a>
          <div class="blog-img">
          <% for(let key in posts) { %>
            <img src="<%=posts[key].img;%>" alt="car image" class="img-grid"></img>
          <% } %>
          </div>
        </div>
      </div>
      <!-- ==========FOOTER========== -->
        <%- include ('../partials/footer.ejs') %>
      <!-- ========================== -->
    </body>
</html>
